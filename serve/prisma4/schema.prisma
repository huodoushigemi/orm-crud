// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String
  name        String
  age         Int
  sex         Int?
  posts       Post[]       @relation("author")
  comments    Comment[]
  followedBy  User[]       @relation("follow")
  following   User[]       @relation("follow")
  videos      User_Video[]
  fieldRW     FieldRW?
  reviewPosts Post[]       @relation("reviewPosts")
}

model Post {
  id         Int       @id @default(autoincrement())
  title      String
  content    String?
  published  Boolean   @default(false)
  author     User?     @relation("author", fields: [authorId], references: [id])
  authorId   Int?
  reviewer   User?     @relation("reviewPosts", fields: [reviewerId], references: [id])
  reviewerId Int?
  comments   Comment[]
  tag        Tag[]
  userId     Int?
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int
  speaker   User      @relation(fields: [speakerId], references: [id])
  speakerId Int
  comments  Comment[] @relation("reply")
  reply     Comment   @relation("reply", fields: [replyId], references: [id])
  replyId   Int
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Video {
  id       Int          @id @default(autoincrement())
  filename String
  size     Int
  type     String
  duration Int
  users    User_Video[]
}

model User_Video {
  id      Int    @id @default(autoincrement())
  user    User?  @relation(fields: [userId], references: [id])
  userId  Int?
  video   Video? @relation(fields: [videoId], references: [id])
  videoId Int?

  @@unique([userId, videoId])
  @@index([userId, videoId])
}

model FieldRW {
  id     Int    @id @default(autoincrement())
  // user   User   @relation(fields: [userId], references: [id])
  // userId Int    @unique
  permis String
}
